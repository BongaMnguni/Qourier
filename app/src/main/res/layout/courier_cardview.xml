<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="3dp"
    card_view:cardCornerRadius="2dp"
    card_view:contentPaddingLeft="16dp"
    card_view:contentPaddingTop="16dp"
    card_view:contentPaddingBottom="16dp"
    card_view:contentPaddingRight="16dp"
    card_view:cardPreventCornerOverlap="true"
    card_view:theme="@style/AlertDialog.AppCompat">

    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:id="@+id/courier_name_output"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name" />

        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/courier_amount_output"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content"
            android:text="Bid Amount" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/courier_name_output"
            android:id="@+id/courier_image_output"
            android:layout_width="96dp"
            android:layout_height="96dp"
            />
        <TextView
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:id="@+id/courier_date_output"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date" />

        <TextView
            android:textStyle="bold"
            android:layout_below="@+id/courier_image_output"
            android:layout_centerHorizontal="true"
            android:id="@+id/courier_addresses_output"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Addresses" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
